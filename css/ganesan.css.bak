/*Ganesan.css*/


body {
    background-attachment:url("GanesanBG.jpg");
	background-attachment:fixed;
	background-blend-mode: lighten;
	object-fit: fill;

}

.container1 {
  font-family: 'Poppins', sans-serif;
  font-weight: 600;
  width: 60%;
  display: flex;
  color:white;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 2%;
  border-radius: 20px;
  background-color: #00a35c;
  border: solid black 2px;
  margin-left:18%;

}

.heading {
	
    padding: 5px;
	font-size:200%;
	text-align: center;
    display: inline-block;
	border: 3px solid #fff;
	padding: 10px;
	border-radius: 10px;
	background-color:#00aeac;

}

.booking-details {
  margin-top: 55px;
  display: flex;
  flex-wrap: wrap;
  justify-content: list-item;
}

.container1 .booking-details .deatails-box {
  width: 300px;
  margin-bottom: 15px;
}

.booking-details .deatails-box .details {
  display: block;
  font-weight: 500;
  margin-bottom: 5px;
}

.booking-details .deatails-box input {
  position: relative;
  width: 90%;
  border: 2px solid gray;
  border-radius: 10px;
  transition: ease-out 0.5s;
  height: 30px;
}

.booking-details .pax input {
  position: relative;
  width: 70%;
  border: 2px solid gray;
  border-radius: 10px;
  transition: ease-out 0.5s;
  height: 30px;
  padding: 5px;
}

.booking-details .pax .details {
  display: block;
  font-weight: 500;
  margin-bottom: 5px;
  margin-right: 80px;
}

.button {
  display: block;
  margin-top: 10px;
}

input[type="Submit"] {
  position: relative;
  padding: 10px;
  font-size: 12px;
  cursor: pointer;
  text-align: center;
  text-decoration: none;
  background-color: green;
  color: white;
  border: none;
  border-radius: 20px;
  top: 10px;
}

input[type="reset"] {
  position: relative;
  padding: 10px;
  font-size: 12px;
  cursor: pointer;
  text-decoration: none;
  background-color: green;
  color: white;
  border: none;
  border-radius: 20px;
  top: 10px;
}

